<%- layout("/layouts/boilerplate") %>
<div id="filters">
    <a href="/listings" class="filter <%= currentCategory === 'trending' ? 'active' : '' %> ">
        <i class="fa-solid fa-fire"></i>
        <p>All</p>
    </a>
    <a href="/listings?q=rooms" class="filter <%= currentCategory === 'rooms' ? 'active' : '' %>">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
    </a>
    <a href="/listings?q=cities" class="filter <%= currentCategory === 'cities' ? 'active' : '' %>">
        <i class="fa-solid fa-city"></i>
        <p>Iconic Cities</p>
    </a>
    <a href="/listings?q=pools" class="filter <%= currentCategory === 'pools' ? 'active' : '' %>">
        <i class="fa-solid fa-water-ladder"></i>
        <p>Amazing Pools</p>
    </a>
    <a href="/listings?q=mountain" class="filter <%= currentCategory === 'mountain' ? 'active' : '' %>">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
    </a>
    <a href="/listings?q=castles" class="filter <%= currentCategory === 'castles' ? 'active' : '' %>">
        <i class="fa-brands fa-fort-awesome-alt"></i>
        <p>Castles</p>
    </a>
    <a href="/listings?q=camping" class="filter <%= currentCategory === 'camping' ? 'active' : '' %>">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
    </a>
    <a href="/listings?q=farms" class="filter <%= currentCategory === 'farms' ? 'active' : '' %>">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
    </a>
    <a href="/listings?q=arctic" class="filter <%= currentCategory === 'arctic' ? 'active' : '' %>">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
    </a>
    <a href="/listings?q=beach" class="filter <%= currentCategory === 'beach' ? 'active' : '' %>">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
    </a>
    <a href="/listings?q=surfing" class="filter <%= currentCategory === 'surfing' ? 'active' : '' %>">
        <i class="fa-solid fa-person-skating"></i>
        <p>Surfing</p>
    </a>
    <a href="/listings?q=castles" class="filter <%= currentCategory === 'igloo' ? 'active' : '' %>">
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
    </a>
    <!-- <a href="/listings?q=castles" class="filter <%= currentCategory === 'igloo' ? 'active' : '' %>">
        <i class="fa-solid fa-ship"></i>
        <p>Boating</p>
    </a> -->
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
            <label class="form-check-label" for="switchCheckChecked">Display total before taxes</label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% if(listings && listings.length) { %>
        <% for(let list of listings) { %>
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listing" style="height:20rem" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text ct-title"><%= list.title %> <br></p>
                        <p class="card-text ct-price" data-bs-price="<%= list.price %>">&#8377;<%= list.price.toLocaleString("en-IN") %></p>
                    </div>
                </div>
            </a>
        <% } %>
    <% } else { %>
        <div class="empty-listings">
            <p>There is no listings with this filter!</p>
        </div>
    <% } %>
</div>

<script>
    let listingsPrice = <%- JSON.stringify(listings) %>;
</script>
<script src="/js/taxButton.js"></script>