<%- layout("/layouts/boilerplate") %>
<div class="row mt-4">
    <div class="col-6 offset-3">
        <h3 class="mt-4 mb-4">WanderLust Signup</h3>
        <form action="/user" method="post" class="needs-validation mt-3" novalidate> 
            <div class="mb-3">
                <label for="username" class="form-label">Enter username</label>
                <input type="text" name="username" placeholder="enter username" class="form-control" id="username" required> 
                <div class="valid-feedback">
                    Title looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="text" name="email" id="email" placeholder="enter email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Create password</label>
                <input type="password" name="password" placeholder="enter password" class="form-control" id="password">
            </div>
            <button type="submit" class="btn btn-success px-3">Register</button>
        </form>
    </div>
</div>